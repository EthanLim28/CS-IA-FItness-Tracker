<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fitness.auth.controllers.DashboardController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="welcomeLabel" styleClass="title-label">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox spacing="10.0">
                            <children>
                                <Button fx:id="logoutButton" mnemonicParsing="false"
                                        styleClass="nav-button" text="Logout" />
                                <Button fx:id="resetDatabaseButton" mnemonicParsing="false"
                                        styleClass="danger-button" text="Reset Database" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <Label fx:id="emailLabel" styleClass="subtitle">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox fx:id="dashboardContent" alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <!-- Add your dashboard content here -->
        </VBox>
    </center>
</BorderPane>

