<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fitness.auth.controllers.WorkoutSessionController">
    <top>
        <VBox prefHeight="100.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Workout Session">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="backButton" mnemonicParsing="false" styleClass="nav-button" text="Back" />
                        <Button fx:id="homeButton" mnemonicParsing="false" styleClass="nav-button" text="Home" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0" styleClass="content-area">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <!-- Session Info -->
            <GridPane hgap="15.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints minWidth="100.0" prefWidth="100.0"/>
                    <ColumnConstraints minWidth="200.0" prefWidth="200.0"/>
                    <ColumnConstraints minWidth="100.0" prefWidth="100.0"/>
                    <ColumnConstraints minWidth="200.0" prefWidth="200.0"/>
                </columnConstraints>

                <Label text="Date:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <DatePicker fx:id="sessionDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Duration:" styleClass="field-label" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="durationField" promptText="Minutes" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Type:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <ComboBox fx:id="workoutTypeComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Status:" styleClass="field-label" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <ComboBox fx:id="statusComboBox" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            </GridPane>

            <!-- Exercise List -->
            <TitledPane text="Exercises" expanded="true" VBox.vgrow="ALWAYS">
                <VBox spacing="10.0">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Button fx:id="addExerciseButton" text="Add Exercise" styleClass="action-button"/>
                        <Button fx:id="removeExerciseButton" text="Remove Exercise" styleClass="action-button"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ComboBox fx:id="filterComboBox" promptText="Filter by Muscle Group"/>
                    </HBox>

                    <TableView fx:id="exerciseTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="exerciseNameColumn" text="Exercise" prefWidth="200.0"/>
                            <TableColumn fx:id="setsColumn" text="Sets" prefWidth="100.0"/>
                            <TableColumn fx:id="weightColumn" text="Weight (kg)" prefWidth="100.0"/>
                            <TableColumn fx:id="repsColumn" text="Reps" prefWidth="100.0"/>
                            <TableColumn fx:id="notesColumn" text="Notes" prefWidth="200.0"/>
                        </columns>
                    </TableView>
                </VBox>
            </TitledPane>

            <!-- Session Notes -->
            <TitledPane text="Session Notes" expanded="true">
                <TextArea fx:id="sessionNotesArea" prefRowCount="3" wrapText="true"/>
            </TitledPane>

            <!-- Action Buttons -->
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button fx:id="startButton" text="Start Session" styleClass="primary-button"/>
                <Button fx:id="pauseButton" text="Pause" styleClass="action-button"/>
                <Button fx:id="finishButton" text="Finish" styleClass="action-button"/>
                <Button fx:id="saveButton" text="Save" styleClass="primary-button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
